<script>
    // Logique du menu mobile
    const menuBtn = document.getElementById('menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    const bar1 = document.getElementById('bar1');
    const bar2 = document.getElementById('bar2');
    const bar3 = document.getElementById('bar3');
    const mobileLinks = document.querySelectorAll('.mobile-link');

    let isMenuOpen = false;

    if (menuBtn && mobileMenu && bar1 && bar2 && bar3) {
        menuBtn.addEventListener('click', () => {
            isMenuOpen = !isMenuOpen;
            
            if (isMenuOpen) {
                // Ouvrir le menu
                mobileMenu.classList.remove('opacity-0', 'pointer-events-none', 'translate-y-10');
                
                // Animation Burger en Croix
                bar1.classList.add('rotate-45', 'translate-y-2.5');
                bar2.classList.add('opacity-0');
                bar3.classList.add('-rotate-45', '-translate-y-2.5');
                
                // Bloquer le scroll du body
                document.body.style.overflow = 'hidden';
            } else {
                // Fermer le menu
                mobileMenu.classList.add('opacity-0', 'pointer-events-none', 'translate-y-10');
                
                // Reset Burger
                bar1.classList.remove('rotate-45', 'translate-y-2.5');
                bar2.classList.remove('opacity-0');
                bar3.classList.remove('-rotate-45', '-translate-y-2.5');
                
                // RÃ©activer le scroll
                document.body.style.overflow = 'auto';
            }
        });

        // Fermer le menu quand on clique sur un lien
        mobileLinks.forEach(link => {
            link.addEventListener('click', () => {
                isMenuOpen = false;
                mobileMenu.classList.add('opacity-0', 'pointer-events-none', 'translate-y-10');
                bar1.classList.remove('rotate-45', 'translate-y-2.5');
                bar2.classList.remove('opacity-0');
                bar3.classList.remove('-rotate-45', '-translate-y-2.5');
                document.body.style.overflow = 'auto';
            });
        });
    }
</script>