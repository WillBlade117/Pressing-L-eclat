<IfModule mod_headers.c>
    # Force le HTTPS (HSTS)
    Header set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    
    # Protection contre le Clickjacking (X-Frame-Options)
    Header always append X-Frame-Options SAMEORIGIN
    
    # Protection XSS
    Header set X-XSS-Protection "1; mode=block"
    
    # Interdire au navigateur de deviner le type de fichier
    Header set X-Content-Type-Options nosniff
    
    # Politique de référent (Referrer Policy)
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Permissions Policy (nouvelle norme pour remplacer Feature-Policy)
    Header set Permissions-Policy "geolocation=(), microphone=(), camera=()"
</IfModule>

# Compression GZIP (pour accélérer le site)
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>